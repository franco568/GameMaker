    draw_sprite(spr_ui_icon, 5, room_width - 110, 120);
    draw_sprite(spr_ui_icon, 6, room_width - 110, 235);
    draw_sprite(spr_ui_icon, 3, room_width - 110, 350);
} else {
    draw_sprite(spr_ui_icon, 3, room_width - 110, 120);
}

//Draw play start button
draw_sprite(spr_ui_button, 0, x, room_height - 70);


//If click pom sound icon
if mouse_check_button_released(mb_left) {

    if scr_over_icon(room_width - 110, 5, spr_ui_icon) {
        if obj_persist.sound {
            obj_persist.sound = false;
            audio_stop_sound(snd_music);
            src_post_value('sound', 'false');
        } else {
            obj_persist.sound = true;
            audio_play_sound(snd_music, 1, true);
            src_post_value('sound', 'true');
        }
    }


    if obj_persist.google_play_version {

        //if tap in this icon Show leadboards
        if scr_over_icon(room_width - 110, 120, spr_ui_icon) {

            src_leaderboards(1);
        }

        //if tap in this icon  Show achiviments    
        if scr_over_icon(room_width - 110, 235, spr_ui_icon) {

            src_leaderboards(2);
        }

        //if tap in this icon  Exit game
        if scr_over_icon(room_width - 110, 350, spr_ui_icon) {
            game_end();
        }

        //If not google play version
    } else {

        //if tap in this icon  Exit game
        if scr_over_icon(room_width - 110, 120, spr_ui_icon) {
            game_end();
        }

    }


    //if tap in this icon  play the game
    if scr_over(x, room_height - 70, spr_ui_button) {

        room_goto_next();

